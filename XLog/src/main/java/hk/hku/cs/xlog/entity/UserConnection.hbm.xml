<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="hk.hku.cs.xlog.entity.UserConnection" table="userconnection">
		<composite-id name="userConPK" class="hk.hku.cs.xlog.entity.UserConPK">
			<key-property name="userId" column="userId" type="string" />
			<key-property name="providerId" column="providerId"
				type="string" />
			<key-property name="providerUserId" column="providerUserId"
				type="string" />
		</composite-id>
		<property name="displayName" column="displayName" type="string" />
		<property name="profileUrl" column="profileUrl" type="string" />
		<property name="imageUrl" column="imageUrl" type="string" />
	</class>
</hibernate-mapping>